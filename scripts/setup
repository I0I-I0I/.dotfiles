cd $HOME/.dotfiles

type=$1

paths=["ghostty" "fish" "tmux" "yazi" "vim"]
hyprpaths=["hypr" "waybar" "dnust" "rofi"]
bwmpaths=[]


for dir in paths; do
    rm -fr "$HOME/.config/$dir"
    stow "$dir"
done

if [ -eq "$type" "hypr" ]; then
    for dir in hyprpaths; do
        rm -fr "$HOME/.config/$dir"
        stow "$dir"
    done
fi

if [ -eq "$type" "bwm" ]; then
    for dir in bwmpaths; do
        rm -fr "$HOME/.config/$dir"
        stow "$dir"
    done
fi

fish
echo /usr/bin/fish | sudo tee -a /etc/shells
chsh -s /usr/bin/fish
