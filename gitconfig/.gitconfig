    name = I0I-I0I

[alias]
    st = status -sb
    lg = log --graph --pretty=format:\"%h | %<(16,trunc)%cr [%an] %s %d\" --date=short -25
    lga = log --graph --pretty=format:'%h | %<(16,trunc)%cr [%an] %s %d' --date=short
    ri = "!git rebase -i $(git lga | fzf --layout reverse | awk '{print $2}')"
    ch = "!(\
            git for-each-ref --format='%(refname) [%(authorname)] %(subject)' refs/heads/ \
            | awk -F'[ /]' '{print $3}' \
            && git log --pretty=format:'%h | %<(16,trunc)%cr [%an] %s %d' --date=short \
        ) \
        | fzf --layout reverse \
        | awk '{print $1}' \
        | xargs git checkout"

    a = "!git status --porcelain \
        | awk '/^.[M?]|^[?][?]/ {print $2}' \
        | fzf --multi --ansi \
            --bind 'shift-tab:toggle-all,ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up' \
            --layout reverse --preview-window right,60% --preview='\
                file={}; \
                git diff --color=always -- \"$file\"' \
        | xargs -r -o git add && git st"

    u = "!git status --porcelain \
        | awk '/^[MARC]/ {print $2}' \
        | fzf --multi --ansi \
            --bind 'shift-tab:toggle-all,ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up' \
            --layout reverse --preview-window right,60% --preview='\
                file={}; \
                git diff --color=always --staged -- \"$file\"' \
        | xargs -r -o git restore --staged && git st"

[advice]
    detachedHead = false
[interactive]
    singlekey = true
