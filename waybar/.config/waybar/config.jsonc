{
    "layer": "top",
    "position": "top", // or "bottom", "left", "right"
    "exclusive": true, // set to false if you want to hide bar
    "spacing": 0,
    "margin-left": 0,
    "margin-top": 0,
    "margin-right": -1,
    "sort-by-number": true,
    "modules-left": [
        "custom/power",
        "hyprland/workspaces",
        "tray"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "memory",
        "cpu",
        "backlight",
        "pulseaudio",
        "bluetooth",
        "network",
        "custom/vpn",
        "battery"
    ],
    "custom/power": {
        "format": "ÔÄë ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown now",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "memory": {
        "interval": 3,
        "format": "ÓøÖ {used}GiB",
        "on-click": "ghostty -e btop",
        "tooltip": true
    },
    "cpu": {
        "interval": 3,
        "format": "{icon0}{icon1}{icon2}{icon3} {usage:>2}%",
        "format-icons": [
            "‚ñÅ",
            "‚ñÇ",
            "‚ñÉ",
            "‚ñÑ",
            "‚ñÖ",
            "‚ñÜ",
            "‚ñá",
            "‚ñà"
        ],
        "tooltip": true,
        "on-click": "ghostty -e btop"
    },
    "bluetooth": {
        "interval": 30,
        "format": "Ôäî",
        "format-no-controller": "",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Ôäî {device_alias}",
        "format-connected-battery": "Ôäî {device_alias} ({device_battery_percentage}%)",
        "tooltip-format": "All devices:\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "\t{device_alias}",
        "tooltip-format-enumerate-connected-battery": "\t{device_alias} ({device_battery_percentage}%)",
        "tooltip-format": "{status}\n\nDevices:\n{device_enumerate}",
        "tooltip-format-enumerate": "\t‚Ä¢ {device_alias} [{device_battery_percentage}%]\n",
        "tooltip-format-enumerate-no-bat": "\t‚Ä¢ {device_alias}\n",
        "on-click": "ghostty -e bluetui",
        "on-right-click": "bluetoothctl power toggle"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}%",
        "format-muted": "  Û∞ñÅ  ",
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "phone-muted": "ÔÑô",
            "portable": "ÔÑã",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
        "smooth-scrolling-threshold": 2
    },
    "backlight": {
        "device": "amd_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "Óèï",
            "Óèì",
            "Óèì",
            "Óèí",
            "Óèë",
            "Óèê",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèå",
            "Óèã",
            "Óèä",
            "Óèâ",
            "Óèà",
            "Óè£"
        ],
        "on-click": "brightnessctl set 20%",
        "on-click-right": "brightnessctl set 65%",
        "smooth-scrolling-threshold": 2,
        "tooltip": false
    },
    "network": {
        // "interface": "wlp*",
        "format": "{ifname}",
        "interval": 5,
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Ôûñ ",
        "format-disconnected": "ÔÑß ",
        "tooltip-format": "{ifname}",
        "tooltip-format-wifi": "{essid} Ôá´  {frequency}MHz\nInterface: {ifname}\nUp: {bandwidthUpBytes}\nDown: {bandwidthDownBytes}",
        "tooltip-format-ethernet": "{ifname} Ôûñ",
        "tooltip-format-disconnected": "Disconnected ÔÑß ",
        "on-click": "ghostty -e nmtui",
        "max-length": 50
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10,
        "show-passive-items": true
    },
    "custom/vpn": {
        "exec": "vpn st --json",
        "return-type": "json",
        "exec-on-event": true,
        "signal": 1,
        "on-click": "vpn tog"
    },
    "battery": {
        "interval": 10,
        "states": {
            "warning": 20,
            "critical": 10
        },
        "format": "{icon}",
        "format-alt": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ó∫°  {time}",
        "format-plugged": "{capacity}% üîå",
        "format-icons": [
            "Û∞ÇÉ",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ],
        "tooltip": true
    },
    "clock": {
        "format": "{:%A, %B %d, %Y - %R}",
        "tooltip": true,
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click": "mode"
        }
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù"
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "on-click": "activate",
        "all-outputs": false,
        "persistent_workspaces": {
            "*": 5
        }
    }
}
}
